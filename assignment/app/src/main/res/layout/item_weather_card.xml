<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

  <androidx.cardview.widget.CardView
      android:layout_width="100dp"
      android:layout_height="150dp"
      android:paddingHorizontal="5dp"
      android:paddingVertical="10dp"
      app:cardCornerRadius="8dp"
      app:cardElevation="0dp"
      android:layout_marginEnd="3dp"
      app:cardUseCompatPadding="true"
      app:cardBackgroundColor="#43D7E1FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="8dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

      <TextView
          android:id="@+id/weather_time"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:text="20:00"
          android:textSize="12dp" />

      <TextView
          android:id="@+id/weather_temppp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:text="20"
          android:layout_marginVertical="5dp"
          android:textColor="@color/black"
          android:textSize="16sp"
          android:textStyle="bold" />

      <ImageView
          android:id="@+id/weather_icon"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:padding="8dp"
          android:layout_marginVertical="5dp"
          android:src="@drawable/rain" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="2dp"
          android:gravity="center"
          android:orientation="horizontal">

        <ImageView
            android:id="@+id/speed_indicator"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:src="@drawable/round_navigation_24" />

        <TextView
            android:id="@+id/weather_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginStart="3dp"
            android:text="100 m/s"
            android:textSize="10dp" />
      </LinearLayout>
    </LinearLayout>
  </androidx.cardview.widget.CardView>
</layout>
